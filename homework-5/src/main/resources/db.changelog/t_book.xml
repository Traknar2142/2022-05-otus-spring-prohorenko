<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="t_book_create" author="vvprokhorenko">
        <preConditions onFail="MARK_RAN">
            <and>
                <not>
                    <tableExists tableName="t_book"/>
                </not>
            </and>
        </preConditions>
        <createSequence sequenceName="id_seq" startValue="1" incrementBy="1"/>

        <createTable tableName="t_book">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="author_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="genre_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>